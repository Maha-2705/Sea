<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.OrderStatusActivity">

    <TextView
        android:id="@+id/order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Status"
        android:textColor="@color/black"
        android:fontFamily="@font/lato_bold"
        android:textSize="25sp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/ash"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estimated Time:"
        android:textColor="@color/green"
        android:textStyle="bold"
        android:textSize="23sp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
    android:id="@+id/estimatedtime"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text=""
    android:textStyle="bold"
    android:fontFamily="@font/inika_regular"
    android:textSize="20sp"
    android:layout_marginStart="250dp"
    android:layout_marginTop="85dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/confirmOrder"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/confirm"
        android:layout_marginTop="120dp"/>


    <ImageView
        android:id="@+id/confirmtick"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="300dp"
        android:layout_marginTop="145dp"/>
<TextView
    android:id="@+id/conform"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Order confirmed"
    android:textStyle="bold"
    android:fontFamily="@font/inika_regular"
    android:textSize="20sp"
    android:layout_marginStart="90dp"
    android:layout_marginTop="145dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/orderPicked"
        android:layout_width="65dp"
        android:layout_height="65dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="12dp"
        android:src="@drawable/picked"
        android:layout_marginTop="220dp"/>
    <ImageView
        android:id="@+id/picktick"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="300dp"
        android:layout_marginTop="240dp"/>
    <TextView
        android:id="@+id/accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order picked"
        android:textStyle="bold"
        android:fontFamily="@font/inika_regular"
        android:textSize="20sp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="240dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/orderDelivered"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/delivery"

        android:layout_marginTop="320dp"/>
    <ImageView
        android:id="@+id/delivertick"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="300dp"
        android:layout_marginTop="337dp"/>
    <TextView
        android:id="@+id/delierved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order delivered"
        android:textStyle="bold"
        android:textSize="20sp"
        android:fontFamily="@font/inika_regular"
        android:layout_marginStart="92dp"
        android:layout_marginTop="340dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/deliverylottie"
        android:layout_width="260dp"
        android:layout_marginTop="400dp"
        android:layout_marginStart="72dp"
        android:layout_height="260dp"
        app:lottie_fileName="delivered.json"
        app:lottie_speed="1"
        app:lottie_loop="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:contentDescription="@string/image_desc_text" />
</androidx.constraintlayout.widget.ConstraintLayout>