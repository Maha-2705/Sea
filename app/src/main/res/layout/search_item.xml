<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/bgColor"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="5dp"
        android:elevation="4dp"
        app:cardCornerRadius="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
<androidx.cardview.widget.CardView
    android:id="@+id/menuImages"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:layout_marginTop="20dp"
    android:layout_marginStart="10dp"
    app:cardCornerRadius="10dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">
           <ImageView
               android:id="@+id/menuImage"
               android:layout_width="60dp"
               android:layout_height="60dp"
              android:scaleType="centerCrop"
               tools:srcCompat="@tools:sample/avatars"/>
</androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/menuPrice"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@drawable/greenbuttongradent"
                android:layout_marginTop="30dp"

                android:paddingTop="9dp"
                android:paddingStart="9dp"
                android:fontFamily="@font/lato_regular"
                android:text="â‚¹35"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginEnd="20dp"
                app:layout_constraintStart_toEndOf="@id/menuFoodName"
                android:layout_marginStart="265dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/menuFoodName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="0dp"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/inika_regular"
                android:text="Dried Mackeral"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@id/menuImages"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/menuPrice"/>

            <ImageButton
                android:id="@+id/addToCartPopularItemsButton"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginTop="40dp"
               app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/vector"
                android:layout_marginStart="298dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/navy"
                android:fontFamily="@font/inika_regular"
                android:text=""
                android:textAllCaps="false"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>