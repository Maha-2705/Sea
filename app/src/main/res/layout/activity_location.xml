<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    tools:context=".ui.activities.LocationActivity">

        <TextView
            android:id="@+id/tv_latitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Lat"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:visibility="invisible"
            android:layout_marginStart="370dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_countryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Cou"
            android:visibility="invisible"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="270dp" />

        <TextView
            android:id="@+id/tv_Address"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="60dp"
            android:backgroundTint="@color/bgColor"
            android:fontFamily="@font/inika_regular"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Allow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/bgColor"
            android:fontFamily="@font/inika_regular"
            android:text="Please allow access to your location"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:layout_marginTop="60dp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/shoptextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/bgColor"
        android:fontFamily="@font/inika_regular"
        android:text=""
        android:textColor="@color/black"
        android:textSize="17sp"
        android:layout_marginTop="100dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/tv_Locality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:gravity="center"
            android:text="Locality"
            android:visibility="invisible"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_longitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Lon"
            android:visibility="invisible"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginStart="340dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Locationbutton"
            android:layout_width="200dp"
            android:layout_height="57dp"
            android:layout_marginTop="150dp"
            android:background="@drawable/bluebutton"
            android:fontFamily="@font/inika_regular"
            android:padding="20dp"
            android:drawableStart="@drawable/locationicon"
            android:text="Pick your location"
            android:textAllCaps="false"
            android:textColor="@color/navy"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
             />
    <TextView
        android:id="@+id/distancetextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dis1"
        android:visibility="invisible"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="150dp"
        android:layout_marginTop="220dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/distancetextview4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dis4"
        android:visibility="invisible"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="250dp"
        android:layout_marginTop="220dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/distancetextview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dis2"
        android:visibility="invisible"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="150dp"
        android:layout_marginTop="240dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/distancetextview5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dis5"
        android:visibility="invisible"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="250dp"
        android:layout_marginTop="240dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/distancetextview3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dis3"
        android:visibility="invisible"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="150dp"
        android:layout_marginTop="260dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/distancetextview6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dis6"
        android:visibility="invisible"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="250dp"
        android:layout_marginTop="260dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/savedAddressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saved Address"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="290dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <ListView
        android:id="@+id/listview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="340dp"
        app:layout_constraintTop_toBottomOf="@+id/savedAddressTextView"
        tools:listitem="@layout/item_saved_address"
        app:layout_constraintEnd_toEndOf="parent"
         />

</androidx.constraintlayout.widget.ConstraintLayout>
