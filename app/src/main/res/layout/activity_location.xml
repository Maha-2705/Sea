<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    tools:context=".ui.activities.LocationActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardBackgroundColor="@color/bgColor"
         >
        <TextView
            android:id="@+id/tv_latitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Lat"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:visibility="invisible"
            android:layout_marginStart="370dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <TextView
            android:id="@+id/tv_countryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Cou"
            android:visibility="invisible"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="270dp"

            />

        <TextView
            android:id="@+id/tv_Address"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="60dp"
            android:backgroundTint="@color/bgColor"
            android:fontFamily="@font/inika_regular"

            android:textColor="@color/white"
            android:textSize="10sp"
            android:visibility="invisible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/Allow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:backgroundTint="@color/bgColor"
            android:fontFamily="@font/inika_regular"
            android:text="Please allow access to your location"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:layout_marginTop="20dp"
            android:visibility="visible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/tv_Locality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:gravity="center"
            android:text="Locality"
            android:visibility="invisible"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <TextView
            android:id="@+id/tv_longitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Lon"
            android:visibility="invisible"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginStart="340dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Locationbutton"
            android:layout_width="200dp"
            android:layout_height="57dp"
            android:layout_marginTop="110dp"
           android:layout_marginStart="100dp"
            android:background="@drawable/bluebutton"
            android:fontFamily="@font/inika_regular"
            android:padding="20dp"
            android:drawableStart="@drawable/locationicon"
            android:text="Pick your location"
            android:textAllCaps="false"
            android:textColor="@color/navy"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewLogin" />

    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/savedaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saved Address"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="290dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <ListView
        android:id="@+id/listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="340dp"
        tools:listitem="@layout/item_saved_address"
        app:layout_constraintTop_toBottomOf="@+id/savedaddress"/>


</androidx.constraintlayout.widget.ConstraintLayout>