<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:backgroundTint="@color/white"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activities.fragments.ProfileFragment">

  <TextView
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:text="My Account"
      android:textSize="19dp"
      android:paddingTop="15dp"
      android:paddingStart="25dp"
      android:textColor="@color/white"
      android:background="@drawable/shape"/>

    <RelativeLayout
        android:id="@+id/container_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_products_list_item"
        android:padding="12dp">

        <ImageView
            android:id="@+id/image_location"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_profile"
            android:padding="8dp"
            android:src="@drawable/user"
            app:tint="@color/navy"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@id/image_location"
            android:fontFamily="@font/inika_regular"
            android:text="My profile"
            android:textColor="@color/black"
            android:textSize="17sp"
            tools:ignore="RelativeOverlap" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:src="@drawable/ic_right"
            tools:ignore="ContentDescription" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/container_orders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_products_list_item"
        android:padding="12dp">

        <ImageView
            android:id="@+id/image_settings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_profile"
            android:padding="12dp"
            android:src="@drawable/menu"
            app:tint="@color/navy"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@id/image_settings"
            android:fontFamily="@font/inika_regular"
            android:text="My orders"
            android:textColor="@color/black"
            android:textSize="17sp"
            tools:ignore="RelativeOverlap" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:src="@drawable/ic_right"
            tools:ignore="ContentDescription" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/container_aboutus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_products_list_item"
        android:padding="12dp">

        <ImageView
            android:id="@+id/image_service"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_profile"
            android:padding="8dp"
            android:src="@drawable/baseline_info_24"
            app:tint="@color/navy"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@id/image_service"
            android:fontFamily="@font/inika_regular"
            android:text="About us"
            android:textColor="@color/black"
            android:textSize="17sp"
            tools:ignore="RelativeOverlap" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:src="@drawable/ic_right"
            tools:ignore="ContentDescription" />
    </RelativeLayout>


</LinearLayout>